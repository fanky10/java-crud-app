<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ar.edu.utn.frro.java.web.cwa.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <description/>
        <display-name>BicicletasServlet</display-name>
        <servlet-name>BicicletasServlet</servlet-name>
        <servlet-class>ar.edu.utn.frro.java.web.cwa.servlets.BicicletasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BicicletasServlet</servlet-name>
        <url-pattern>/bicicletas</url-pattern>
    </servlet-mapping>
    <filter>
        <display-name>UserFilter</display-name>
        <filter-name>UserFilter</filter-name>
        <filter-class>ar.edu.utn.frro.java.web.cwa.filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>
    <servlet>
        <description/>
        <display-name>SecuredResourcesServlet</display-name>
        <servlet-name>SecuredResourcesServlet</servlet-name>
        <servlet-class>ar.edu.utn.frro.java.web.cwa.servlets.SecuredResourcesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecuredResourcesServlet</servlet-name>
        <url-pattern>/secure/usuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ar.edu.utn.frro.java.web.cwa.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
